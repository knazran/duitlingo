{
    "name": "Duitlingo",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_icon": "assets/logo-32.png",
          "default_popup": "html/popup.html"
      },
    
    "web_accessible_resources": ["js/content.js", "html/intro_widget.html", "html/stocks_widget.html", "html/mlt_widget.html",  "css/tailwind.min.css"],
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "https://www.google.com/*",
      "https://www.bursamarketplace.com/mlt/*",
      "https://www.bursaacademy.bursamarketplace.com/en/*",
      "https://www.bursamarketplace.com/"
    ]
  }